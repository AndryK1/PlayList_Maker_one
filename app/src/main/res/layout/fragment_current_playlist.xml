<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/LightGrey"
    tools:context=".ui.media.activity.FragmentCurrentPlaylist"
    android:id="@+id/fragmentCurrentPlaylist"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchorGravity="end|center">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/leaveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_arrow_24" />

        <ImageView
            android:id="@+id/PlaylistImage"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:padding="@dimen/mediumPadding"
            android:src="@drawable/ic_placeholder_45"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ordinaryMargin"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/ys_display_bold"
            android:textColor="@color/black"
            android:textFontWeight="700"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/PlaylistImage" />

        <TextView
            android:id="@+id/description"
            style="@style/currentPlaylistOrdinaryText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name" />

        <TextView
            android:id="@+id/duration"
            style="@style/currentPlaylistOrdinaryText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description" />

        <ImageView
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dot_13"
            app:layout_constraintStart_toEndOf="@id/duration"
            app:layout_constraintTop_toTopOf="@id/duration"
            app:layout_constraintBottom_toBottomOf="@id/duration"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/tracksCount"
            style="@style/currentPlaylistOrdinaryText"
            android:layout_marginStart="0dp"
            app:layout_constraintStart_toEndOf="@id/dot"
            app:layout_constraintTop_toBottomOf="@id/description" />

        <ImageView
            android:id="@+id/shareButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/duration"
            app:tint="@color/black"
            android:layout_marginTop="@dimen/ordinaryMargin"
            android:layout_marginStart="@dimen/ordinaryMargin"/>

        <ImageView
            android:id="@+id/moreOptionsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/shareButton"
            app:layout_constraintTop_toBottomOf="@id/duration"
            android:src="@drawable/ic_more_options_24"
            app:tint="@color/black"
            android:layout_marginTop="@dimen/ordinaryMargin"
            android:layout_marginStart="@dimen/ordinaryMargin"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/playListBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/corners_for_bg"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:behavior_peekHeight="266dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:id="@+id/line"
            android:layout_width="50dp"
            android:layout_height="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/minMargin"
            android:background="@drawable/rounded_corners_bg_44"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line"
            android:layout_marginTop="12dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/moreOptionsBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/corners_for_bg"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="383dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:id="@+id/bottomLine"
            android:layout_width="50dp"
            android:layout_height="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/minMargin"
            android:background="@drawable/rounded_corners_bg_44"
            />

        <LinearLayout
            android:id="@+id/playListInfo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/songHeight"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bottomLine"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/adaptiveBackGroundWhite">
            <ImageView
                android:id="@+id/playlistBottomIcon"
                android:layout_width="@dimen/songPhoto"
                android:layout_height="@dimen/songPhoto"
                android:layout_marginTop="@dimen/paddingSearch"
                android:layout_marginBottom="@dimen/paddingSearch"
                android:layout_marginStart="@dimen/marginSongStart"
                android:textAlignment="center"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/paddingSearch"
                android:layout_marginTop="@dimen/marginSongTop">

                <TextView
                    android:id="@+id/playlistBottomName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ys_display_regular"
                    android:textSize="@dimen/songNormalText"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/adaptiveCommonText"
                    android:text="@string/plug"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/trackBottomCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ys_display_regular"
                        android:textSize="@dimen/songMediumText"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/plug"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/shareText"
            style="@style/playlistBottomText"
            android:text="@string/share"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playListInfo"
          />

        <TextView
            android:id="@+id/editText"
            style="@style/playlistBottomText"
            android:text="@string/editInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shareText"
            />

        <TextView
            android:id="@+id/deletePlaylistText"
            style="@style/playlistBottomText"
            android:text="@string/delete_playlist"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editText"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
